<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-xs-12 col-md-6">


      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <h2>Sign up</h2>

      <div class="form-group mb-1">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, class:"form-control input-lg" %>
      </div>

      <div class="form-group mb-1">
        <%= f.label :phone %><br />
        <%= f.text_field :phone, autofocus: true, class:"form-control input-lg" %>
      </div>

      <div class="form-group mb-1">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class:"form-control input-lg", autocomplete: "email" %>
      </div>

      <div class="form-group mb-1">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, class:"form-control input-lg",autocomplete: "new-password" %>
      </div>

      <div class="form-group mb-1">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation,class:"form-control input-lg", autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-primary btn-lg btn-block" %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>