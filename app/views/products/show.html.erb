<div class="container">
  <div class="row align-items-center">
    <div class="col-md-6">
      <p><%= @product.image %></p>
    </div>

    <div class="col-md-6">
      <div class="list-group list-group-flush">
        <h2 class="list-group-item"><%= @product.name %></h2>
        <div class="list-group-item"><%= @product.description %></div>
        <div class="list-group-item">Price: $<%= @product.price %></div>
        <div class="list-group-item">Auction Date: <%= @product.auctionDate %></div>
        <div class="list-group-item">Auction Starting Date: <%= @product.startingDate %></div>
        <div class="list-group-item">Auction Ending Date: <%= @product.endingDate %></div>
      </div>
    </div>

    <div class="col-md-6">
      <h2> Biddings </h2>
      <% @product.biddings.each do |bidding| %>
      <div class="list-group mb-1">
        <div href="#" class="list-group-item list-group-item-action " aria-current="true">
          <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">User ID: <%= bidding.user_id  %> </h5>
          </div>
          <p class="mb-1">Bidding: <%= bidding.price %></p>
        </div>
      </div>
      <% end %>

      <% if signed_in? %>
      <%= form_for [@product, @product.biddings.build] do |f| %>
      <div class="form-group">
        <%= f.number_field :price, class: "form-control", placeholder: "Add your bidding" %>
      </div>

      <div class="actions text-right mt-1">
        <%= f.submit "Comentar", class: "btn btn-primary" %>
      </div>
      <% end %>
      <%else%>
      <div class="alert alert-danger mt-1"><%= link_to "Log in", new_user_session_path %> to add a bidding </div>
      <% end %>
    </div>

  </div>
</div>