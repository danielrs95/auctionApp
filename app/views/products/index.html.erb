<div class="container-sm">
  <div class="row align-items-center">
    <div class="col-xs-12">
      <h1>Products</h1>

      <div class="table-responsive">
        <%= link_to "New Product", new_product_path, class: "btn btn-primary" %>
      </div>

      <table class="table table-striped table-bordered table-sm table-bordered table-hover mt-3">
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Image</th>
          <th>Price</th>
          <th>Auction date</th>
          <th>Starting date</th>
          <th>Ending date</th>
          <% if current_user.try(:admin?)%>
          <th></th>
          <th></th>
          <%end%>
        </tr>
        <% @active_products.each do |product| %>
        <tr>
          <td><%= link_to product.name, product %></td>
          <td><%= product.description %></td>
          <td><%= product.image %></td>
          <td><%= product.price %></td>
          <td><%= product.auctionDate %></td>
          <td><%= product.startingDate %></td>
          <td><%= product.endingDate %></td>

          <% if current_user.try(:admin?)%>
          <th><%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_product_path(product) %></th>
          <th><%= link_to '<i class="fas fa-trash"></i>'.html_safe, product, method: :delete, data: {confirm: "Delete product?"} %></th>
          <%end%>
          <% end %>

        </tr>
      </table>
    </div>

    <% if current_user.try(:admin?)%>
    <div class="col-xs-12">
      <h1>Auction date passed</h1>


      <table class="table table-striped table-bordered table-sm table-bordered table-hover mt-3">
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Image</th>
          <th>Price</th>
          <th>Auction date</th>
          <th>Starting date</th>
          <th>Ending date</th>
          <% if current_user.try(:admin?)%>
          <th></th>
          <th></th>
          <%end%>
        </tr>
        <% @inactive_products.each do |product| %>
        <tr>
          <td><%= link_to product.name, product %></td>
          <td><%= product.description %></td>
          <td><%= product.image %></td>
          <td><%= product.price %></td>
          <td><%= product.auctionDate %></td>
          <td><%= product.startingDate %></td>
          <td><%= product.endingDate %></td>

          <% if current_user.try(:admin?)%>
          <th><%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_product_path(product) %></th>
          <th><%= link_to '<i class="fas fa-trash"></i>'.html_safe, product, method: :delete, data: {confirm: "Delete product?"} %></th>
          <%end%>
          <% end %>

        </tr>
      </table>
    </div>
    <%end%>
  </div>
</div>