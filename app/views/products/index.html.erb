<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>Products</h1>

      <div class="text-right">
        <%= link_to "New Product", new_product_path, class: "btn btn-primary" %>
      </div>

      <table class="table table-striped table-bordered table-sm">
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Image</th>
          <th>Price</th>
          <th>Auction date</th>
          <th>Starting date</th>
          <th>Ending date</th>
          <th></th>
          <th></th>
        </tr>
        <% @products.each do |product| %>
        <tr>
          <td><%= link_to product.name, product %></td>
          <td><%= product.description %></td>
          <td><%= product.image %></td>
          <td><%= product.price %></td>
          <td><%= product.auctionDate %></td>
          <td><%= product.startingDate %></td>
          <td><%= product.endingDate %></td>
          <th><%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_product_path(product) %></th>
          <th><%= link_to '<i class="fas fa-trash"></i>'.html_safe, product, method: :delete, data: {confirm: "Delete product?"} %></th>

        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>